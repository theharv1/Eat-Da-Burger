<div class="container content">
    <div class=jumbotron>
    <h1 id="welcome" class="display-3">Welcome! let's!</h1>
    <h1 id="siteName" class="display-4">Eat Da Burger!</h1>
     <p id="main-lead" class="lead">Add a burger you'd like to try and add it to the list, once youve tried it click the devour button.</p>
    </div>

<div id="add-a-burger" class="row">
    {{!-- <h2>Add a Burger</h2> --}}
    <form class="add-form">
    <div class="form-group">
    <label for="name_inout">Burger Name:</label>
    <input type="text" id="name_input" name="burger_name">
  
    <button class="btn btn-primary btn-sm" type="submit">ADD</button>
    </form>
    </div>

<div class="row">
    <div class ="col-sm-5 text-center">
        <h3>Burger Menu:</h3>
        <ul>
        {{#each burgers}}
        {{#unless this.devoured }}
            {{!-- {{> burgers/burger-block }} --}}
        <ul>
        <br>
        {{burger_name}}
        <br>
	    <button class="btn btn-success btn-sm devour" data-id="{{id}}" data-devourState="{{devoured}}">
	    {{#unless devoured}}DEVOUR IT!{{/unless}}
	    </button>
	    
        </ul>
        {{/unless}}
         {{/each}}
        </ul>
        </div>
    <div class ="col-sm-1"></div>
    <div class ="col-sm-5 text-center">
        <h3>Burger History:</h3>
        <ul>
        {{#each burgers}}
        {{#if this.devoured }}
      
        <ul>
        <br>
        {{burger_name}}
        <br>
	    <button class="btn btn-danger btn-sm undevour" data-id="{{id}}" data-devourState="{{devoured}}">
	    {{#if devoured}}DELETE{{/if}}
	    </button>
        </ul>
        {{/if}}
        {{/each}}
        </ul>
    </div>

</div>
</div>
</div>